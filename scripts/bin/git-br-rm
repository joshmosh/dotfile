#!/bin/bash

usage() {
    cat <<EOF
Usage: $(basename "$0") <glob-pattern>
Example: $(basename "$0") "git-branch-*"

Description: Finds git branches matching the provided glob pattern and deletes them. This script does not remove remote branches!
EOF
}

confirm_delete() {
  while true; do
    read -p "ğŸ‘‰  (y/n): " yn
    case "$yn" in
      [Yy]* )
        return 0;;
      [Nn]* )
        return 1;;
      * )
        return 1;;
    esac
  done
}

if [ $# -ne 1 ]; then
    usage
    exit 1
fi

pattern="$1"
matching_branches=($(git branch | grep -E $pattern | awk '{$1=$1; print}'))

echo "ğŸ™  Branches matching '$1':"
for branch in "${matching_branches[@]}"; do
  echo "$branch"
done
echo "âœ‹  Are you sure you want to delete?"

if ! confirm_delete; then
  echo ""
  echo "ğŸ›‘ Stopping!"
  exit 1
fi

for branch in "${matching_branches[@]}"; do
    git branch -D "$branch"
done

echo "âœ…  Done!"
